@import "../common/var.styl"
// 左侧图层列表
.board-coverage {
  background: $color-admin-ctrl;
  .header-title {
    height: 30px;
    line-height: 30px;
    padding-left: 10px;
    background: $color-admin-ctrl-header;
    font-size: 12px;
    color: $color-text-info;
  }
  .control {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 30px;
    border-bottom: 2px solid #282f3a;
    opacity: .3;
    .iconfont {
      padding: 2px;
      font-size: 14px;
      background-color: #282f3a;
      color: #8cc7ff;
      margin: 0 8px;
    }
    &.selected {
      opacity: 1;
      .iconfont {
        cursor: pointer;
        &:hover {
          color: #fff;
          background-color: #2d8cf0;
        }
      }
    }
  }
  .control-body {
    width: 100%;
    height: 100%;
    overflow: hidden;
    .body-wrap {
      width: 100%;
      height: 100%;
      padding: 5px;
      .list-item {
        position: relative;
        padding: 0 6px;
        line-height: 26px;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
        color: $color-text-info;
        span {
          display: inline-block;
          vertical-align: middle;
          text-indent: 7px;
          font-size: 12px;
        }
        &.hovered {
          background-color: rgba(143, 255, 255, .1);
        }
        &.selected {
          background-color: $color-blue;
        }
      }
    }
  }
}

//  需要覆盖bin-ui的样式
.body-wrap .bin-scrollbar__wrap {
  overflow-x: hidden;
}
